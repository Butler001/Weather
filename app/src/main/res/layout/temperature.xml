<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/temperature_current"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:text="17"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_toRightOf="@id/temperature_current"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="16dp">

        <TextView
            android:id="@+id/temperature_max"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="16"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="℃"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:text="/"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/temperature_min"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="16"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="℃"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="18dp">

        <TextView
            android:id="@+id/temperature_condition"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="晴"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/temperature_air_conditon"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="空气好"
            android:gravity="bottom"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:paddingRight="20dp"
        android:gravity="right"
        android:text="时间"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/temperature_time_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>